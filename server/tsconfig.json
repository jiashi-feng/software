{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "voice-service/types", "./types"],
    "noImplicitAny": false
  },
  "include": ["src/**/*", "types/**/*", "voice-service/types", "voice-service/services", "voice-service/routes", "voice-service/controllers"],
  "exclude": ["node_modules"]
} 