{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types", "./types"],
    "noImplicitAny": false
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules"]
} 