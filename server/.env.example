# 服务器配置
PORT=3000
CORS_ORIGIN=*

# 阿里云访问配置
ALIYUN_ACCESS_KEY_ID=your_access_key_id
ALIYUN_ACCESS_KEY_SECRET=your_access_key_secret
ALIYUN_REGION=cn-shanghai  # 可选值: cn-shanghai, cn-beijing, cn-shenzhen
ALIYUN_ENDPOINT=nls-meta.cn-shanghai.aliyuncs.com

# 阿里云STS配置
ALIYUN_STS_ENDPOINT=sts.cn-shanghai.aliyuncs.com
ALIYUN_RAM_ROLE_ARN=acs:ram::123456789012:role/speech-app-sts-role
ALIYUN_RAM_SESSION_NAME=speech-app-session
ALIYUN_STS_DURATION_SECONDS=3600

# 阿里云语音合成配置
ALIYUN_TTS_APP_KEY=your_app_key
ALIYUN_TTS_API_VERSION=2023-11-01
ALIYUN_TTS_HTTP_ENDPOINT=nls-speech.cn-shanghai.aliyuncs.com
# 阿里云语音服务区域设置（影响使用哪个服务URL）
ALIYUN_SERVICE_REGION=shanghai  # 可选值: shanghai, beijing, shenzhen

# 百度语音云配置
BAIDU_API_KEY=your_baidu_api_key
BAIDU_SECRET_KEY=your_baidu_secret_key 