# 服务器基本配置
NODE_ENV=development

# 任务分配服务配置
TASK_SERVICE_PORT=5000
MONGO_URI=mongodb://root:password@localhost:27017/Family?authSource=admin
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRE=30d

# 语音服务配置
VOICE_SERVICE_PORT=3000
CORS_ORIGIN=*

# 阿里云访问配置
ALIYUN_ACCESS_KEY_ID=您的阿里云访问密钥ID
ALIYUN_ACCESS_KEY_SECRET=您的阿里云访问密钥Secret
ALIYUN_REGION=cn-shanghai  # 可选值: cn-shanghai, cn-beijing, cn-shenzhen
ALIYUN_ENDPOINT=nls-meta.cn-shanghai.aliyuncs.com

# 阿里云STS配置
ALIYUN_STS_ENDPOINT=sts.cn-shanghai.aliyuncs.com
ALIYUN_RAM_ROLE_ARN=acs:ram::您的阿里云账号ID:role/您的RAM角色名
ALIYUN_RAM_SESSION_NAME=speech-app-session
ALIYUN_STS_DURATION_SECONDS=3600

# 阿里云语音合成配置
ALIYUN_TTS_APP_KEY=您的阿里云语音应用AppKey
ALIYUN_TTS_API_VERSION=2023-11-01
ALIYUN_TTS_HTTP_ENDPOINT=nls-gateway-cn-shanghai.aliyuncs.com
ALIYUN_SERVICE_REGION=shanghai  # 可选值: shanghai, beijing, shenzhen

# 百度语音云配置
BAIDU_API_KEY=您的百度语音API Key
BAIDU_SECRET_KEY=您的百度语音Secret Key
BAIDU_CUID=speechapp  # 用户唯一标识，可以使用应用标识或设备ID 